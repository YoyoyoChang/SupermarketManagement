@page "/products"
@inject UseCases.ProductsUseCases.IViewProductsUseCase ViewProductsUseCase
@inject UseCases.UserCaseInterfaces.IGetCategoryByIdUseCase GetCategoryByIdUseCase
<h3>Products</h3>
<br/>
@if(_products != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Category</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in _products)
            {
                 <tr>
                    <td>@GetCategoryByIdUseCase.Execute(product.CategoryId)?.Name</td>
                    <td>@product.Name</td>
                    <td>@(Math.Round(product.Price, 2))</td>
                    <td>@product.Quantity</td>
                </tr>   
            }
        </tbody>
    </table>
}
@code {
    private List<Product> _products;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _products = ViewProductsUseCase.Execute().ToList();
    }
}
